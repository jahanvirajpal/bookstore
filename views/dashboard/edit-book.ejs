<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
 rel="stylesheet">



<div class="container-fluid  col-9 mt-5 "> 
  
    <h2 class="fs-1 fw-bolder text-center pb-4 "> Update Book</h2>

    <center>
      <form method="post">
        <input type="text" name="bookname" class="w-50 my-2 form-control" placeholder="Book name" 
        value="<%= editbook.bookname %>" aria-label="bookname" >
      
        <input type="text" name="authorname" class="w-50 my-2 form-control" placeholder="Book Author's name" 
        value="<%= editbook.authorname %>" aria-label="author'sname"  >
      
      
        <input type="number" name="bookprice" class="w-50 my-2 form-control" placeholder="Book Price" 
        value="<%= editbook.bookprice %>" aria-label="bookprice"  >
      
      
        <input type="number" name="discount" class="w-50 my-2 form-control" placeholder="Discount" 
        value="<%= editbook.discount %>" aria-label="discount"  >
        
        <input type="text" name="offer" class="w-50 my-2 form-control" placeholder="Any Offer" 
        value="<%= editbook.offer %>" aria-label="offer"  >
      
      <textarea class="w-50 my-2 form-control" name="details" placeholder="Book details" 
       aria-label="With textarea"><%= editbook.details %></textarea>

      <div class="input-group w-50 my-2"> <input type="file" class="w-25 form-control">
    <label class="w-25 input-group-text" >Upload</label></div>
 
  <button type="submit" class="my-2 btn btn-primary">Update</button>

</form>

    </center>

    

    </div>
